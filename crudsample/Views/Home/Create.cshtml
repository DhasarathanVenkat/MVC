@model crudsample.Models.Home

<form asp-action="Create">
	<div>
		<label asp-for="Name" class="form-label">Name</label>
		<input asp-for="Name" type="text" class="form-control" />
		<span class="text-success text-danger" asp-validation-for="Name"></span>
	</div>

	<div>
		<label asp-for="Email" class="form-label">Email</label>
		<input asp-for="Email" type="text" class="form-control" />
		<span class="text-success text-danger" asp-validation-for="Email"></span>
	</div>

	<div>
		<label asp-for="Password" class="form-label">Password</label>
		<input asp-for="Password" type="text" class="form-control" />
		<span class="text-success text-danger" asp-validation-for="Password"></span>
	</div>

	<div class="text-danger">
		@if(TempData["msd"] !=null)
		{
			<div>
				@TempData["msg"]
				</div>
		}
	</div>
	<br/>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>